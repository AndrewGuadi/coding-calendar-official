import sqlite3

def initialize_database():
    conn = sqlite3.connect('methods.db')
    cursor = conn.cursor()
    cursor.execute('''
        CREATE TABLE IF NOT EXISTS methods (
            id INTEGER PRIMARY KEY,
            day INTEGER,
            language TEXT,
            method TEXT,
            description TEXT,
            example TEXT
        )
    ''')
    conn.commit()
    conn.close()

if __name__ == '__main__':
    initialize_database()
